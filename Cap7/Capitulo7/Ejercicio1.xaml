<Window x:Class="Cap7.Capitulo7.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap7.Capitulo7"
        mc:Ignorable="d"
        Title="Ejercicio 1" Height="250" Width="300">
    <Grid>
    <StackPanel Margin ="16" Orientation ="Vertical">
        <Label Content="Ingresa las calificaciones" />
        <TextBox x:Name="CalificacionTextBox" Text="" Margin ="4" FontSize="15"/>
        <ListBox  x:Name="imprimir"  d:ItemsSource="{d:SampleData ItemCount=5}" Height="65" Width="243"
                Background = "#FFF5F5F5" HorizontalAlignment="Center"/>

          
          <StackPanel
        Margin = "0,16,0,0"
        Orientation ="Horizontal"
        HorizontalAlignment="Center" >

        <Button Content ="✏️Agregar" Background = "#FFFDF4BF" Click ="agregar_Click"/>
         <Button Content ="📑Imprimir" Background = "#FFFDF4BF" Click ="Imprimir_Click"/>
         
 
     </StackPanel>
     </StackPanel>

    </Grid>     
</Window>